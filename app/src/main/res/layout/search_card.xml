<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:outlineSpotShadowColor="@color/blue_700"
        android:elevation="1.7sp"
        android:layout_marginHorizontal="3sp"
        android:layout_marginVertical="3sp"
        android:paddingVertical="20sp"
        >
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/pathway"
            android:paddingStart="5sp"
            android:layout_marginTop="9sp"
            android:layout_marginEnd="6sp"
            android:layout_marginStart="2sp"
            android:paddingEnd="5sp"
          />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/joname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey name"
            android:textColor="@color/blue_700"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:layout_marginBottom="40sp"
            android:layout_marginStart="34sp"
            android:layout_marginTop="10sp"/>


        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/source"
            android:paddingStart="5sp"
            android:layout_marginTop="50sp"
            android:layout_marginEnd="6sp"
            android:layout_marginStart="2sp"
            android:paddingEnd="5sp"
            />

            <com.google.android.material.textview.MaterialTextView
android:id="@+id/startpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="34sp"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="5sp"
                android:gravity="center"
                android:paddingBottom="3sp"
                android:text="start point"
                android:textColor="@color/blue_700"
                android:textSize="14sp"
                android:textStyle="normal"

                />
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/path"
            android:paddingStart="5sp"
            android:layout_marginTop="50sp"
            android:layout_marginEnd="6sp"
            android:layout_marginStart="150sp"
            android:paddingEnd="5sp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/desponit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="185sp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="5sp"
            android:gravity="center"
            android:paddingBottom="3sp"
            android:text="destination point"
            android:textColor="@color/blue_700"
            android:textSize="14sp"
            android:textStyle="normal"

            />



        <TextView
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="16sp"
            android:contentDescription="forword"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24_2"
            android:drawablePadding="10sp" />


    </androidx.cardview.widget.CardView>


</LinearLayout>